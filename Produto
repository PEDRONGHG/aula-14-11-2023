public class Produto{
    

    //define atributos
    double preco;
    String nome;
    
    //define metodos 
    void informarNome(){
        System.out.println("o nome do produto é : " + nome);
    }
    
    void informarPreco(){
        System.out.println("o nome do produto é:" + preco);
    }
    
    void fazerPromoção(){
        preco = preco - 1;
    }
}
